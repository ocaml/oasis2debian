| ".*\\.txt"             -> no
| ".*\\.txt-exp"         -> no
| ".*\\.html"            -> no
| ".*\\.patch"           -> no
| ".*\\.mkd"             -> no
| ".*\\.mod"             -> no
| ".*\\.mlify"           -> no
| "configure"            -> no
| ".*\\.sh"              -> skip match:"#!.*"
| ".*\\.sh"              -> frame open:"#" line:"#" close:"#"
| ".*\\.ml\\.ab"         -> frame open:"(*" line:"*" close:"*)" 
| ".*\\.ml"              -> skip match:"(\\*pp .* \\*)"
| "_headache\\.config"   -> frame open:"#" line:"#" close:"#"
| "_announce"            -> no
| "_header"              -> no
| ".*\\.swp"             -> no
| ".*\\.po"              -> no
| ".*\\.po.bak"          -> no
| ".*\\.mo"              -> no
| "META"                 -> frame open:"#" line:"#" close:"#"
| "POTFILES"             -> no
| "LINGUAS"              -> no
| ".*\\.pot"             -> no
| ".*\\.png"             -> no
| ".*\\.mllib"           -> frame open:"#" line:"#" close:"#"
| ".*\\.odocl"           -> frame open:"#" line:"#" close:"#"
| "_tags"                -> frame open:"#" line:"#" close:"#"
| "_oasis"               -> no
| "setup\\.log"          -> no
| "setup\\.data"         -> no
| ".*\\.tar\\.gz"        -> no
| ".*\\.tar\\.gz\\.asc"  -> no
| "\\.gitignore"         -> no
